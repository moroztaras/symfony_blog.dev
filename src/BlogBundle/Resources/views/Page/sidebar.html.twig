<section class="section">
    <header>
        <h3>Теги</h3>
    </header>
    <p class="tags">
        {% for tag, weight in tags %}
            <span class="weight-{{ weight }}">{{ tag }}</span>
        {% else %}
            <p>Немає тегів</p>
    {% endfor %}
    </p>
</section>
<section class="section">
    <header>
        <h3>Останні коментарі</h3>
    </header>
    {% for comment in latestComments %}
        <article class="comment">
            <header>
                <p class="small"><span class="highlight">{{ comment.user }}</span> прокоментував
                    <a href="{{ path('blog_view', {id : comment.blog.id, slug : comment.blog.slug}) }}#comment-{{ comment.id }}">
                        {{ comment.blog.title }}
                    </a>

                    <em><time datetime="{{ comment.created|date("d-m-Y") }}">{{ comment.created|date("d-m-Y") }}</time></em>
                </p>
            </header>
            <p>{{ comment.comment }}</p>
            </p>
        </article>
    {% else %}
        <p>Останні коментарі відсутні</p>
    {% endfor %}
</section>